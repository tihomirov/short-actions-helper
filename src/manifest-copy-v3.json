{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "short-actions-helper",
  "default_locale": "en",
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/img/icon-16x16.png",
    "48": "assets/img/icon-48x48.png",
    "128": "assets/img/icon-128x128.png"
  },
  "permissions": ["storage", "tabs", "bookmarks"],
  "content_security_policy": {
    "script-src": "'self' 'unsafe-eval'",
    "object-src": "self",
    "connect-src": "ws://localhost:*/"
  },
  "web_accessible_resources": [{
    "resources": ["assets/img/*"],
    "matches": ["assets/img/*"],
    "extension_ids": ["assets/img/*"]
  }]
}
