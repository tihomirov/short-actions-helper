{
  "manifest_version": 3,
  "name": "Remote Shortcuts",
  "version": "0.0.1",
  "background": {
    "service_worker": "background/index.ts"
  },
  "content_scripts": [
    {
      "js": ["content/index.ts"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "action": { "default_popup": "pages/popup/index.html" },
  "permissions": ["tabs", "storage"]
}
